
# Launching programs
ctrl shift t
    telegram-desktop
ctrl shift s
    spotify
ctrl shift b
    brave
ctrl shift d
    datagrip
ctrl shift m
    evolution

alt {h,j,k,l}
    bspc node {west,south,north,east}.window --focus

alt shift h
    bspc node focused.window --swap west --follow || bspc node focused.window -m west --follow
alt shift l
    bspc node focused.window --swap east --follow || bspc node focused.window -m east --follow
alt shift {j,k}
    bspc node focused.window --swap {south,north} --follow

alt shift {1,2}
    bspc node focused -m {west,east} --follow

ctrl shift {h,j,k,l}
    bspc node focused.window --presel-dir '~'{west,south,north,east}

alt {bracketleft,bracketright}
    bspc node first_ancestor --ratio {-,+}0.05

alt grave
    bspc node --to-node "last.!automatic"

alt Return
    bspc node focused.window --swap biggest.local

alt f
    bspc desktop focused --layout next

alt m
    bspc node focused.window --flag hidden=on
alt shift m
    bspc node any.window.hidden --flag hidden=off --focus

alt r
    bspc node first_ancestor -R 180
alt shift r
    bspc node first_ancestor -R 90

alt c
    bspc node -c

alt d
    bspc desktop --focus next

alt F12
    xprop

ctrl alt shift r
    bspc wm -r ; pkill -usr1 -x sxhkd; notify-send 'bspwm & sxhkd' 'Reloaded config' -t 1500

# Sound stuff
alt F5
    amixer -D pulse set Master 1+ toggle
alt F6
    amixer set Master 5%-
alt F7
    amixer set Master 5%+

