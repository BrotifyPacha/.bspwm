
# Launching programs
ctrl shift t
    zsh "$HOME/.config/bspwm/bspwm-singleton" start-or-focus telegram-desktop
ctrl shift s
    zsh "$HOME/.config/bspwm/bspwm-singleton" start-or-focus spotify
ctrl shift b
    zsh "$HOME/.config/bspwm/bspwm-singleton" start-or-focus brave
ctrl shift d
    datagrip
ctrl shift m
    evolution
ctrl shift e
    xdg-open ~

Print
    xfce4-screenshooter --region
alt Print
    xfce4-screenshooter --window
ctrl shift Print
    xfce4-screenshooter --fullscreen

alt {h,j,k,l}
    bspc node {west,south,north,east}.window --focus || bspc monitor {west,south,north,east} --focus

alt shift {h,j,k,l}
    bspc node --swap {west,south,north,east} --follow || bspc node -m {west,south,north,east} --follow

alt shift m
    bspc node --to-monitor next --follow

# alt shift {1,2}
#     bspc node focused -m {west,east} --follow

ctrl shift {h,j,k,l}
    bspc node --presel-dir '~'{west,south,north,east}

alt {1,2,3,4,5,6,7,8}
    bspc desktop {1,2,3,4,5,6,7,8} --focus
alt shift {1,2,3,4,5,6,7,8}
    bspc node --to-desktop {1,2,3,4,5,6,7,8} --follow
ctrl {1,2,3,4,5,6,7,8}
    bspc node --to-desktop {1,2,3,4,5,6,7,8}

alt {bracketleft,bracketright}
    bspc node first_ancestor --ratio {-,+}0.05

alt equal
    bspc node first_ancestor --equalize
alt shift equal
    bspc node first_ancestor --balance

alt grave
    bspc node --to-node "last.!automatic"

alt Return
    bspc node --swap biggest.local

alt f
    bspc desktop focused --layout next

alt m
    bspc node --flag hidden=on
alt shift m
    bspc node any.window.hidden --flag hidden=off --focus

alt r
    bspc node first_ancestor -R 180
alt shift r
    bspc node first_ancestor -R 90

alt c
    bspc node --close
alt shift c
    bspc node --kill

alt d
    bspc desktop --focus next

alt F12
    xprop

ctrl alt shift r
    bspc wm -r ; pkill -usr1 -x sxhkd; notify-send 'bspwm & sxhkd' 'Reloaded config' -t 1500

# Sound stuff
alt F5
    amixer -D pulse set Master 1+ toggle
alt F6
    amixer set Master 5%-
alt F7
    amixer set Master 5%+

