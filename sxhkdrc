
# Launching programs
ctrl shift t
    zsh "$HOME/.config/bspwm/bspwm-singleton" telegram-desktop
ctrl shift s
    zsh "$HOME/.config/bspwm/bspwm-singleton" spotify
ctrl shift b
    zsh "$HOME/.config/bspwm/bspwm-singleton" brave
ctrl shift d
    zsh "$HOME/.config/bspwm/bspwm-singleton" datagrip
ctrl shift m
    zsh "$HOME/.config/bspwm/bspwm-singleton" evolution
ctrl shift e
    xdg-open ~
ctrl shift i
    zsh "$HOME/.config/bspwm/bspwm-singleton" insomnia
ctrl shift c
    zsh "$HOME/.config/bspwm/bspwm-singleton" galculator

Print
    xfce4-screenshooter --region
alt Print
    xfce4-screenshooter --window
ctrl shift Print
    xfce4-screenshooter --fullscreen

alt {h,j,k,l}
    "$BSPCONFIG/helpers/focus_window_or_monitor" {west,south,north,east}

alt shift {h,j,k,l}
    "$BSPCONFIG/helpers/shift_hjkl_handler" {west,south,north,east}

ctrl shift {h,j,k,l}
    bspc node --presel-dir '~'{west,south,north,east}

alt {1,2,3,4,5,6,7,8}
    bspc desktop {1,2,3,4,5,6,7,8} --focus
alt shift {1,2,3,4,5,6,7,8}
    bspc node --to-desktop {1,2,3,4,5,6,7,8} --follow
ctrl {1,2,3,4,5,6,7,8}
    bspc node --to-desktop {1,2,3,4,5,6,7,8}

alt bracketright
    bspc node --resize right +50 0 || bspc node --resize left +50 0
alt shift bracketright
    bspc node --resize bottom 0 +50 || bspc node --resize top 0 +50
alt bracketleft
    bspc node --resize right -50 0 || bspc node --resize left -50 0
alt shift bracketleft
    bspc node --resize bottom 0 -50 || bspc node --resize top 0 -50

alt equal
    bspc node first_ancestor --balance
alt shift equal
    bspc node @/ --balance

alt grave
    bspc node --to-node "last.!automatic" --state tiled

alt Return
    bspc node --swap biggest.local

alt f
    bspc desktop focused --layout next
alt shift f
    bspc node --state \~fullscreen

alt m
    bspc node --flag hidden=on
alt shift m
    bspc node any.window.hidden --flag hidden=off --focus

alt e
    bspc node any.floating --focus
alt shift e
    bspc node --state \~floating

alt r
    bspc node first_ancestor -R 180
alt shift r
    bspc node first_ancestor -R 90

alt c
    bspc node --close
alt shift c
    bspc node --kill

alt p
    bspc node last --focus

alt { ,shift} w
    bspc desktop --focus {next,prev}.local

alt F12
    xprop_val="$(xprop WM_CLASS)" &&  notify-send Xprop "$xprop_val"

ctrl alt shift r
    bspc wm -r ; pkill -usr1 -x sxhkd; notify-send 'bspwm & sxhkd' 'Reloaded config' -t 1500

# Sound stuff
alt F5
    amixer -D pulse set Master 1+ toggle
alt F6
    amixer set Master 5%-
alt F7
    amixer set Master 5%+

